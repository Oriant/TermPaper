@model TermPaper.Models.LotModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>
<body>
    <p>
        <b>@Model.Name</b><br />
        <b>Description:</b>@Model.Description<br />
        <b>Start price:</b>@Model.StartPrice<br />
        <b>Current price:</b>@Model.CurrentPrice<br />
        <b>Start date:</b>@Model.StartDate<br />
        <b>Finish date:</b>@Model.FinishDate<br />
        <b>Bid rate:</b>@Model.BidRate<br />

        @if (Model.Biddings.Count > 0)
        {
            <b>Last bid by @ViewBag.LastBidderName at @Model.Biddings.Last().Date</b><br />
        }

        @if (this.User.IsInRole("user") && Model.UserId != ViewBag.CurrentUserId && !Model.IsFinished)
        {
        <p>
            <input type="submit" class="btn btn-success col-sm-1" value="Bid" onclick="location.href='@Url.Action("Bid", "Bidding", new { id = Model.Id })'" />
        </p>
    }
    <p>
        <input type="button" onclick="javascript:history.go(-1)" class="btn btn-primary col-sm-1" value="Back to list" />
    </p>
    </body>

